@model QuanLyDoAn.Models.Entities.DangKy

@{
    ViewBag.Title = "ChoDiem";
}

<h2>Cho điểm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDT)

        @Html.HiddenFor(model => model.MSSV)

        @Html.HiddenFor(model => model.MSGV)

        @Html.HiddenFor(model=>model.TrangThai)

        <div class="form-group">
            @Html.LabelFor(model => model.MSSV, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p style="margin:5px 0px -5px 0px">@Model.MSSV</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SinhVien.HoTen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p style="margin:5px 0px -5px 0px">@Model.SinhVien.HoTen</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeTai.TenDT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p style="margin:5px 0px -5px 0px">@Model.DeTai.TenDT</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiemQT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiemQT, new { htmlAttributes = new { @class = "form-control",@type="number" } })
                @Html.ValidationMessageFor(model => model.DiemQT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiemThi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiemThi, new { htmlAttributes = new { @class = "form-control",@type="number" } })
                @Html.ValidationMessageFor(model => model.DiemThi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "ListHuongDan")
</div>
